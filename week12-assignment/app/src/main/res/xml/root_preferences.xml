<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/appearance_header">

        <EditTextPreference
            app:key="name"
            app:title="@string/Name"
            app:defaultValue="Hello World!"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="small"
            app:entries="@array/size_entries"
            app:entryValues="@array/size_values"
            app:key="size"
            app:title="@string/Size"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="italic"
            app:title="@string/Italic"
            app:defaultValue="false"/>

    </PreferenceCategory>

</PreferenceScreen>